CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm

all: $(OBJ)
	$(CC)  $(OBJ) -o $(NAME)

	.PHONY: clean oclean fclean re
	
clean :
	$(RM) -rf *~ $(NAME)l

oclean :
	$(RM) -rf $(OBJ)

fclean :
	rm -f *~ school
	rm -f main.o school.o
re :
	rm -f main.o school.o
	gcc    -c -o main.o main.c
	gcc    -c -o school.o school.c
	gcc main.o school.o -o school