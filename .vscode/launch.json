    {
        "configurations": [
            {
                "name": "Linux (GCC 9.4.0)",
                "includePath": [
                    "${default}",
                    "${workspaceRoot}/**"
                ],
                "compilerPath": "/usr/bin/gcc-9",  // Use the specific GCC 9.4.0 executable
                "cStandard": "gnu17",
                "cppStandard": "gnu++14",
                "intelliSenseMode": "linux-gcc-x64",
                "browse": {
                    "path": [
                        "${workspaceFolder}"
                    ],
                    "limitSymbolsToIncludedHeaders": true,
                    "databaseFilename": ""
                },
                "configurations": [
                    {
                        "name": "(gdb) Launch",
                        "type": "cppdbg",
                        "request": "launch",
                        "program": "enter program name, for example ${workspaceFolder}/a.out",
                        "args": [],
                        "stopAtEntry": false,
                        "cwd": "${fileDirname}",
                        "environment": [],
                        "externalConsole": false,
                        "MIMode": "gdb",
                        "setupCommands": [
                            {
                                "description": "Enable pretty-printing for gdb",
                                "text": "-enable-pretty-printing",
                                "ignoreFailures": true
                            },
                            {
                                "description": "Set Disassembly Flavor to Intel",
                                "text": "-gdb-set disassembly-flavor intel",
                                "ignoreFailures": true
                            }
                        ]
                    }
